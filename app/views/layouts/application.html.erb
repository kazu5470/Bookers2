              %>
              <li class="fas fa-link text-light"></li> 
              <span class="text-light">About</span>
              <% end %>
              <%= link_to new_user_registration_path, class: 'btn btn-default' do 
              %>
              <li class="fas fa-user-plus text-light"></li> 
              <span class="text-light">Sign up</span>
              <% end %>
              <%= link_to new_user_session_path, class: 'btn btn-default' do 
              %>
