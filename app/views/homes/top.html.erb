
<% if user_signed_in? %>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <%= render 'template/userinfo', user: current_user %>
        <%= render 'template/newbook' %>
      </div>
    </div>
  </div>
<% else %>
  </div>
  <div class="container">
    <div class="row">
      <div class='mx-auto col-11 col-sm-10 col-lg-8 col-xl-6 text-center'>
        <h1>welcome to<i class="fas fa-book"></i><strong>Bookers</strong>  !!</h1>
        <p>you can share and exchange your opinions , inpressions , and emotions<br>
           about various books!</p>
        <div class="btn-wrapper col-10 mx-auto">
          <div class="row">
            <%= link_to "Log in", new_user_session_path, class: 'btn btn-info btn-sm btn-block mb-3 sign_in' %>
          </div>
          <div class="row">
            <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-success btn-sm btn-block sign_up' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>


<style>
  .ab-slick {
    height: 500px;
    width: 100%;
  }
</style>
